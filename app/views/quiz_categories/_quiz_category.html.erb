<li class="quiz_category">
  <span><%= category.name %></span>
  <%= link_to edit_quiz_category_path(category), class: "edit_button inline" do %>
    <%= icon("fas", "edit") %>編集
  <% end %>
  <%= link_to delete_quiz_category_path(category), class: "delete_button inline",data: { confirm: 'このカテゴリーを削除しますか?' } ,method: :delete do %>
    <%= icon("fas", "trash-alt") %>削除
  <% end %>
</li>