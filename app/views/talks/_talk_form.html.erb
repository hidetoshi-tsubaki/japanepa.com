<%= form_with model: @talk, local: true, builder: CustomFormBuilder do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="field select_communities">
        <%= f.label :community_id %><br>
        <% if @communities %>
          <%= f.collection_select :community_id, @communities, :id, :name %>
        <% else %>
          <%= f.hidden_field :community_id ,:value => @community.id %>
        <% end %>
          <%= f.hidden_field :user_id ,:value => current_user.id %>
        </div>
        <div class="field">
          <p class="bold">Image</p>
          <div class="post_img_area">
            <% if @talk.img.attached? %>
              <%= image_tag @talk.img, id: 'present_img' %>
            <% else %>
              <img id="no_img" src="https://kukuhana.s3-ap-northeast-1.amazonaws.com/no_img.jpg" />
              <%= f.hidden_field :img_cache %>
            <% end %>
            <img id="new_img" src="#" class='hidden' />
            <label for="input_img" class="input_img">
              <p class="center upload_btn">Upload</p>
              <%= f.file_field :img, id: 'input_img' %>
            </label>
          </div>
        </div>
      </div>
    </div>
    <div class ="col-md-6">
      <div class="field input_content"> 
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </div>
    </div>
  </div>
    <div class="actions">
      <%= f.submit "Post" %>
    </div>
<% end %>
<%= javascript_include_tag "prev_img.js" %>