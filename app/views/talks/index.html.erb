<% content_for(:html_title) { "Talks Index" } %>
<% breadcrumb :talks, @talks %>
<div class="section_wrapper">
  <div class="main_section inline" id="talk_index">
    <h1 class="center bold page_title">Talks index</h1>
    <div class="talk_index jscroll">
      <% if @talks.present? %>
        <%= render partial: 'talk', collection: @talks, as: :talk %>
      <% else %>
        <p class="center">No...talk</p>
      <% end %>
    </div> 
    <div id="to_top_btn_wrapper">
      <a href="#" id="talk_top_btn"><%= icon("fas", "arrow-circle-up") %></a>
    </div>
  </div>
  <div class="side_section talk_page">
      <%= render 'side_section' %>
  </div>
</div>