
<% @talks.each do |talk| %>
  <%= link_to talk_show_path(talk) do %>
    <div>
      <p>posted by <%= talk.user.name %> <%= time_ago_in_words(talk.created_at) %> ago</p>
    <p><%= image_tag talk.img.to_s %></p>
    </div>
    <div>
      <p><%= simple_format(talk.content) %></p>
    </div>
    <p><%= talk.comments.count %> comment</p>
    <div>
      <% if talk.user_id == current_user.id %>
        <%= link_to "edit",edit_talks_path(talk), remote: true,class:"edit-btn" %>
        <%= link_to "delete",delete_talk_path(talk), remote: true,data: { confirm: 'Delete this post?' },method: :delete,class:"delete-btn" %>
    <% end %>
    </div>
  <% end %>
<% end %>
<%= paginate @talks %>