  <div>
      <p>posted by <%= @talk.user.name %> <%= time_ago_in_words(@talk.created_at) %> ago</p>
    <p><%= image_tag @talk.img.to_s %></p>
    </div>
    <div>
      <p><%= simple_format(@talk.content) %></p>
    </div>
    <div id="comments">
      <p>Comments</p>
      <%= render 'comments/comments' %>
    </div>
    <div class="comment_form">
      <%= render 'comments/comment_form' %>
    </div>
</div>