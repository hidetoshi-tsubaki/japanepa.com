<% if current_user.already_liked_talk?(talk) %>
  <%= link_to like_talk_path(talk), class:"like" ,remote: true, method: :delete do %>
    <%= icon("fas", "heart") %> <%= talk.like_talks.count %>
  <% end %>
<% else %>
  <%= link_to like_talk_path(talk), class:"like" ,remote: true, method: :post do %>
    <%= icon("far", "heart") %> <%= talk.like_talks.count %>
  <% end %>
<% end %>