<ul class="talk_info">
  <li class="inline">
    <%= link_to "#{talk.community.name}", community_path(talk.community_id) %>
  </li>
  <li class="posted_time inline">
    Posted by <%= link_to talk.user.name, user_path(talk.user) %> 
  </li>
  <li class="inline"><%= time_ago_in_words(talk.created_at) %> ago</li>
</ul>