<div class="side_content">
  <h4><%= icon("fas", "comment-alt") %> Most Commented</h4>
  <div class="inner_article_content">
    <% if @viewed_top_3.present? %>
      <%= render partial: "ranked_talk", collection: @commented_top_3, as: :talk %>
    <% else %>
      <p>No Data</p>
    <% end %>
  </div>
</div>
<div class="side_content">
  <h4><%= icon("fas", "heart") %> Most Liked</h4>
  <div class="inner_article_content">
    <% if @liked_top_3.present? %>
      <%= render partial: "ranked_talk", collection: @liked_top_3, as: :talk %>
    <% else %>
      <p>No Data</p>
    <% end %>
  </div>
</div>