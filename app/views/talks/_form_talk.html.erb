<%= form_with model: @talk do |f| %>
    <div class="field"> 
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
    <div class="field">
      <%= f.label :img %><br>
      <%= f.file_field :img %>
    </div>
    <div class="field">
      <%= f.check_box :remove_img %>
    </div>
    <div class="actions">
      <%= f.submit "#{@action}" %>
    </div>
  <% end %>