<%= form_with model: @community, builder: CustomFormBuilder, local: true do |f| %>
  <p class="error_message"><%= "please input value correctly..." if @community.errors.any? %></p>
  <%= f.hidden_field :founder_id, value: current_user.id %>
  <div class="field bold">
  <%= f.label :name %>
  <%= f.text_field :name, id: "input_community_name" %>
  </div>
  <div class="field bold">
    <p>Tag</p>
    <ul id="form_tags" class="tag_input"></ul>
  </div>
  <%= render 'upload_img', model: @community, f: f %>
  <div class="field bold">
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction, id: "input_community_introduction" %>
  </div>
  <div class="actions">
    <%= f.submit action %>
  </div>
<% end %>