<h1><%= @community.name %></h1>
<p id="member_count_<%= @community.id %>"><%= render partial:'member_count', locals: {community: @community} %></p>
<div id="join_btn_<%= @community.id %>">
  <%= render partial:'join_btn' , locals: {community: @community} %>
</div>
<div class="row">
  <div id="form_talk" class="col-md-4 ">
    <%= link_to  create_talk_from_community_path(@community.id) ,class:'submit' ,remote: true do %>
    <button>create talk</button>
    <% end %>
    <p><%= link_to 'community_index', communities_path %></p>
  </div>
  <div id="talk_index" class="col-md-8 jscroll">
    <%= render 'talks/index' %> 
  </div>
</div>
