<% content_for(:html_title) { "Community-#{@community.name}" } %>
<% breadcrumb :show_community, @community %>
<div class="section_wrapper">
  <div class="main_section">
    <h1 class="center bold page_title"><%= @community.name %></h1>
    <div class="talk_index jscroll" class="main_section inline jscroll">
      <% if @talks.present? %>
        <%= render partial: 'talks/talk', collection: @talks, as: :talk %>
      <% else %>
        <h2 class="center" id="no_talk">no talks...</h2>
      <% end %>
    </div>
  </div>
  <div class="side_section inline community_page">
    <div class="side_content">
      <h4>Community Data</h4>
      <div class="community_data">
        <%= link_to 'Edit', edit_community_path(@community), id: "edit_community_btn" if current_user.is_founder?(@community) %>
        <%= render "community_img", community: @community %>
        <p class="status_counts">
          <%= icon("fas","users") %> <%= @community.users.count %>
          <%= icon("fas","comments") %> <%= @community.talks.count %>
        </p>
        <p class="founder_name"><span>Founder</span> <%= link_to @community.founder.name, user_path(@community.founder.id) %></p>
        <p class="community_introduction"><span>Introduction</span><%= @community.introduction %></p>
        <div id="join_btn_<%= @community.id %>">
          <% unless current_user.is_founder?(@community) %>
            <%= render partial:'join_btn' , locals: { community: @community } %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="side_content">
      <h4><%= icon("fas", "tags") %> Menu (メニュー)</h4>
      <div class="side_inner_box">
        <p>
          Don't be shy! <br>
          Let's chat with members.
        </p>
        <%= link_to 'Create Talk', new_talk_path(talk: { community_id: @community.id }), class: 'block center create_talk_btn', remote: true %>
      </div>
    </div>
    <div class="side_content">
      <h4><%= icon("fas", "tags") %> Tags(タグ)</h4>
      <ul class="tags">
        <% if @tags.present? %>
          <%= render partial: 'tag', collection: @tags, as: :tag %>
        <% else %>
          <li>No tags....</li>
        <% end %>
      </ul>
    </div>
    <%= render "top_3_communities" %>
    <%= render "joined_communities" %>
  </div>
</div>
<%= render "back_to_top_btn" %>