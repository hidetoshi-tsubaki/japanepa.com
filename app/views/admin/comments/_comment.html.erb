<div class="comment" id="comment_<%= comment.id %>">
  <p class="commenter_info">
    <span><%= link_to comment.user.name, admin_user_path(comment.user) %></span>
    <span><%= time_ago_in_words(comment.created_at) %> ago</span>
    <span>
      <%= link_to admin_comment_path(comment), remote: true, data: { confirm: 'Delete this comment?' }, method: :delete, class: "delete_btn" do %>
        <%= icon("fas", "trash-alt") %>
      <% end %>
    </span>
  </p>
  <%= simple_format(text_url_to_link(h(comment.contents)).html_safe) %>
</div>
