<% content_for(:html_title) { 'Edit Event' } %>
<% breadcrumb :edit_event, @event %>
<div class="form_wrapper">
  <p class="right">  
    <%= link_to admin_event_path(@event), class: "delete_btn inline", data: { confirm: 'この記事を削除しますか?' }, method: :delete do %>
      <%= icon("fas", "trash-alt") %> 削除
    <% end %>
  </p>
  <h1 class="center">Edit Event</h1>
  <%= render partial: 'form', locals: { event: @event, form_btn: "編集" } %>
</div>