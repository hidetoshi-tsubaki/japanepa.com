<tr class="index_content row_<%= announce_counter %>" id="announce_<%= announce.id %>">
  <td class="status"><%= icon("fas", "#{contents_status(announce)}") %></td>
  <td><%= announce.id %></td>
  <td class="truncate_column"><%= announce.title.truncate(20) %></td>
  <td><%= number_with_delimiter(announce.impressions_count) %></td>
  <td><%= announce.created_at.strftime('%Y/%m/%d') %></td>
  <td><%= announce.updated_at.strftime('%Y/%m/%d') %></td>
  <td>
    <%= link_to edit_admin_announcement_path(announce), class: "edit_btn inline" do %>
      <%= icon("fas", "edit") %> 編集
    <% end %>
    <%= link_to admin_announcement_path(announce), class: "delete_btn inline", data: { confirm: 'この記事を削除しますか?' }, remote: true, method: :delete do %>
      <%= icon("fas", "trash-alt") %> 削除
    <% end %>
  </td>
</tr>
