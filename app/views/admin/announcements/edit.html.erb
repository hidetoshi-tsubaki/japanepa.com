<% content_for(:html_title) { 'Edit Announcement' } %>
<% breadcrumb :edit_announcement, @announce %>
<p class="admin_form_title">Edit Event</p>
<div class="form_wrapper">
  <p class="right">
    <%= link_to admin_announcement_path(@announce), class: "delete_btn inline", data: { confirm: 'この記事を削除しますか?' }, method: :delete do %>
      <%= icon("fas", "trash-alt") %> 削除
    <% end %>
  </p>
  <%= render partial: 'form', locals: { announce: @announce, form_btn: "編集" } %>
</div>