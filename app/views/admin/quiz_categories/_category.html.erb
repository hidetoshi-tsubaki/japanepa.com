<li class="admin_quiz_category" id="category_<%= category.id %>">
  <p class="admin_category_title"><%= category.name %></p>
  <p class="right">
    <%= link_to categories_admin_quiz_category_path(category), class: "edit_btn inline" do %>
    <%= icon("fas", "edit") %>詳細
    <% end %>
    <%= link_to admin_quiz_category_path(category), class: "delete_btn inline",data: { confirm: 'このカテゴリーを削除しますか?' } ,remote: true, method: :delete do %>
      <%= icon("fas", "trash-alt") %>削除
    <% end %>
  </p>
</li>