<tr class="index_content" id="talk_<%= talk.id %>">
  <td><%= talk.id %></td>
  <td class="truncate_column"><%= talk.community.name.truncate(20) %></td>
  <td><%= talk.user.name %></td>
  <td><%= talk.content.truncate(20) %></td>
  <td><%= number_with_delimiter(talk.likes_count) %></td>
  <td><%= talk.created_at.strftime('%Y/%m/%d') %></td>
  <td><%= talk.updated_at.strftime('%Y/%m/%d') %></td>
  <td>
    <%= link_to admin_talk_path(talk), class: "edit_btn inline" do %>
      <%= icon("fas", "edit") %> 詳細
    <% end %>
    <%= link_to admin_talk_path(talk), class: "delete_btn inline", data: { confirm: 'この会話を削除しますか?' } , remote: true, method: :delete do %>
      <%= icon("fas", "trash-alt") %> 削除
    <% end %>
  </td>
</tr>
