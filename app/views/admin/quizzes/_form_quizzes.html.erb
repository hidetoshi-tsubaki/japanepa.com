<div>
  <%= form_with model: @quiz, builder: CustomFormBuilder do |f| %>
    <div id="level" class="field">
      <span>Level</span>
      <%= f.select :level, @level_options, { include_blank: false ,prompt: "選択してください" }, id: 'select_level', class: 'form_page' %>
    </div>
    <div id="section" class="field">
      <span>Section</span>
      <%= f.select :section,[], { include_blank: true }, id: 'select_section', class: 'form_page' %>
    </div>
    <div id="title" class="field">
      <span>Title</span>
      <%= f.select :category, [], { include_blank: true }, id: 'select_title', class: 'form_page' %>
    </div>
    <div class="field">
      <%= f.label :question %>
      <%= f.text_field :question %>
    </div>
    <div class="field">
      <%= f.label :choice1 %>
      <%= f.text_field :choice1 %>
    </div>
    <div class="field">
      <%= f.label :choice2%>
      <%= f.text_field :choice2 %>
    </div>
    <div class="field">
      <%= f.label :choice3 %>
      <%= f.text_field :choice3 %>
    </div>
    <div class="field">
      <%= f.label :choice4 %>
      <%= f.text_field :choice4 %>
    </div>
    <div class="actions">
      <%= f.submit "#{yield(:action)}" %>
    </div>
  <% end %>
</div>
