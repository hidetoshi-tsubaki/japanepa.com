<div class="quiz_form_wrapper">
  <%= form_with model: [:admin, quiz], local:true, builder: CustomFormBuilder do |f| %>
    <p class="error_message"><%="入力値が正しくありません。" if quiz.errors.any? %></p>
    <% unless quiz.category_id.nil? %>
      <%= f.hidden_field :category_id, value: quiz.category_id %>
    <% else %>
      <div class="field">
        <%= f.label :category_id %>
        <%= f.select :category_id, [], { include_blank: true }, id: 'select_title', class: 'form_page' %>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :question %>
      <%= f.text_area :question_html, class: 'question_input', 'data-provider': :summernote %>
    </div>
    <div class="field">
      <%= f.label :choice1 %>
      <%= f.text_field :choice1 %>
    </div>
    <div class="field">
      <%= f.label :choice2%>
      <%= f.text_field :choice2 %>
    </div>
    <div class="field">
      <%= f.label :choice3 %>
      <%= f.text_field :choice3 %>
    </div>
    <div class="field">
      <%= f.label :choice4 %>
      <%= f.text_field :choice4 %>
    </div>
    <div class="actions">
      <%= f.submit  form_btn, data: { confirm: "送信しますか？"} %>
    </div>
  <% end %>
  </div>
<%= javascript_include_tag 'summernote' %>