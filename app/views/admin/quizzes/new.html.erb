<div class="form_wrapper">
  <div>
    <div class="field">
      <p class="bold">Level</p>
      <select id="select_level" class="index">
      <option>選択してください</option>
        <%= render partial: 'option', collection: @options, as: :option %>
      </select>
    </div>
    <div class="field">
      <p class="bold">Secton</p>
      <select id="select_section">
        <option></option>
      </select>
    </div>
  </div>

  <div>
    <%= form_with model: [:admin, @quiz], local:true, builder: CustomFormBuilder do |f| %>
      <div class="field">
        <p class="bold">Category_id</p>
        <%= f.select :category_id, [], { include_blank: true }, id: 'select_title', class: 'form_page' %>
      </div>
      <div class="field">
        <%= f.label :question %>
        <%= f.text_field :question %>
      </div>
      <div class="field">
        <%= f.label :choice1 %>
        <%= f.text_field :choice1 %>
      </div>
      <div class="field">
        <%= f.label :choice2%>
        <%= f.text_field :choice2 %>
      </div>
      <div class="field">
        <%= f.label :choice3 %>
        <%= f.text_field :choice3 %>
      </div>
      <div class="field">
        <%= f.label :choice4 %>
        <%= f.text_field :choice4 %>
      </div>
      <div class="actions">
        <%= f.submit "新規作成", data: { confirm: "送信しますか？"} %>
      </div>
    <% end %>
  </div>
</div>
