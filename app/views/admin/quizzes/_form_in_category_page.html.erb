<div class="quiz_form_wrapper">
  <%= form_with model: [:admin, quiz], builder: CustomFormBuilder do |f| %>
    
    <% if defined?(category) %>
      <%= f.hidden_field :category_id, value: category.id %>
    <% else %>
      <div class="field">
        <%= f.label :category_id %>
        <%= f.select :category_id, [], { include_blank: true }, id: 'select_title', class: 'form_page' %>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :question %>
      <%= f.text_area :question_html, class: 'question_input', 'data-provider': :summernote %>
    </div>
    <div class="field">
      <%= f.label :choice1 %>
      <%= f.text_field :choice1 %>
    </div>
    <div class="field">
      <%= f.label :choice2%>
      <%= f.text_field :choice2 %>
    </div>
    <div class="field">
      <%= f.label :choice3 %>
      <%= f.text_field :choice3 %>
    </div>
    <div class="field">
      <%= f.label :choice4 %>
      <%= f.text_field :choice4 %>
    </div>
    <div class="actions">
      <%= f.submit "新規作成", data: { confirm: "送信しますか？"} %>
    </div>
  <% end %>
  </div>
<%= javascript_include_tag 'summernote' %>