<% content_for(:html_title) { 'Edit Information' } %>
<% breadcrumb :edit_information, @info %>
<div class="form_wrapper">
  <p class="right">
    <%= link_to admin_information_path(@info), class: "delete_btn inline", data: { confirm: 'この記事を削除しますか?' }, method: :delete do %>
      <%= icon("fas", "trash-alt") %> 削除
    <% end %>
  </p>
  <h1 class="center">Edit Information</h1>
  <%= render partial: 'form', locals: { info: @info, form_btn: "編集" } %>
</div>