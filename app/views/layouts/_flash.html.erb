<% if flash[:notice] %>
  <div id="notice">
    <p class="flash_icon"><%= icon("far", "laugh") %></p>
    <p class="flash_message"><%= flash[:notice] %></p>
  </div>
<% elsif flash[:alert] %>
  <div id="alert">
    <p class="flash_icon"><%= icon("far", "dizzy") %></p>
    <p class="flash_message"><%= flash[:alert] %></p>
  </div>
<% end %>