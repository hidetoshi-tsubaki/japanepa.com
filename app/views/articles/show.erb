
<% if admin_signed_in? %>
  <div >
    <%= link_to "edit",edit_articles_path(@article) %>
    <%= link_to "delete",delete_article_path(@article),data: {confirm: 'Delete Article?'},method: :delete %>
    <%= link_to "back to index",articles_index_path %>
  </div>
<% end %>


<div class="wrapper-article">
  <div id="like_btn_<%= article.id %>">
    <%= render partial:'like_btn' , locals: {article: article} %>
  </div>
  <div id="bookmark_btn_<%= article.id %>">
    <%= render partial:'bookmark_btn' , locals: {article: article} %>
  </div>
  <div>
    <p><%= image_tag @article.image.to_s ,class:"top_img" %></p>
  </div>
  <div class="article-contents">
    <p class="posted-time">posted at <%= @article.created_at.strftime('%Y/%m/%d') %></p>
    <h1><%= @article.title %></h1>
    <hr>
    <div>
      <%= raw(@article.contents) %>
    </div>
</div>
