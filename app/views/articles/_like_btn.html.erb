<% if current_user.already_liked_article?(article) %>
  <%= link_to like_article_path(article), remote: true, method: :delete do %>
    <%= icon("fas", "heart") %><%= article.likes_count %>
  <% end %>
<% else %>
  <%= link_to like_articles_path(id: article.id), remote: true, method: :post do %>
    <%= icon("far", "heart") %><%= article.likes_count %>
  <% end %>
<% end %>

