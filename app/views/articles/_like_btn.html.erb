<% if current_user.already_liked_article?(article) %>
  <%= link_to like_article_path(article), class: "like_btn", remote: true, method: :delete do %>
    <%= icon("fas", "heart") %> <%= article.like_articles.count %>
  <% end %>
<% else %>
  <%= link_to like_articles_path(id: article.id), class: "like_btn", remote: true, method: :post do %>
    <%= icon("far", "heart") %> <%= article.like_articles.count %>
  <% end %>
<% end %>

