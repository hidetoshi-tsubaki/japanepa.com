<% content_for(:html_title) { "Articles Index" } %>
<% breadcrumb :articles, @articles %>
<div class="section_wrapper">
  <div class="main_section">
    <h1 class="center bold page_title">Articles index</h1>
    <div class="article_index jscroll">
      <% if @articles.present? %>
        <%= render partial: 'article', collection: @articles, as: :article %>
      <% else %>
        <p class="center">No...article</p>
      <% end %>
    </div>
  </div>
  <div class="side_section article_page pc">
    <%= render 'side_section' %>
  </div>
</div>
<div class="user_menu_in_mobile hidden">
  <%= render "user_menu_in_mobile" %>
  <%= render "side_section" %>
</div>
<%= render "back_to_top_btn" %>