<h1>Articles index </h1>
<div class="section_wrapper">
  <div class="main_section">
    <div class="article_index jscroll">
      <% if @articles.present? %>
        <%= render partial: 'article', collection: @articles, as: :article %>
        <%= paginate @articles %>
      <% else %>
        <p class="center">No...article</p>
      <% end %>
    </div>
  </div>
  <div class="side_section">
    <ul class="tags">
      <% if @tags.present? %>
        <%= render partial: 'tag', collection: @tags, as: :tag %>
      <% else %>
      <li>No tags....</li>
      <% end %>
    </ul>
    <%= search_form_for @q, url: search_articles_path do |f| %>
      <%= f.text_field :title_or_lead_cont_any %>
      <%= f.submit 'Search' %>
    <% end %>
  </div>
</div>