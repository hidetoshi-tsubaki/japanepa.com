<% @articles.each do |article| %>
  <div id="like_btn_<%= article.id %>">
    <%= render partial:'like_btn' , locals: {article: article} %>
  </div>
  <div id="bookmark_btn_<%= article.id %>">
    <%= render partial:'bookmark_btn' , locals: {article: article} %>
  </div>
  <%= link_to show_articles_path(article) do %>
    <div class="row article-index no-gutters">
      <div class="col-xs-4 contain-thumbnail">
        <%= image_tag article.image.to_s ,class:"thumbnail" %></p>
      </div>
      <div class="col-xs-8">
        <div class="article-lead">
          <p><%= article.title %></p>
          <p class="lead"><%= article.lead %></p>
          <p class="posted-time">posted at <%= article.created_at.strftime('%Y/%m/%d') %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<%= paginate @articles %>