<%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: CustomFormBuilder) do |f| %>
  <div class="field input">
    <h1>:<%= f.label :name %></h1>
    <%= f.text_field :name, autofocus: true, autocomplete: "email" ,placeholder:" Enter name"%>
  </div>
  <div class="field input">
    <h1>:<%= f.label :country %></h1>
    <%= f.country_select :country,priority_countries: ["nepal"]%>
  </div>
  <div class="field input">
    <h1>:<%= f.label :current_address %></h1>
    <%= f.country_select :current_address,priority_countries: ["nepal","JP"]%>
  </div>
  <div class="field input">
    <h1>:<%= f.label :email %></h1>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:" Enter Email"%>
  </div>
  <div class="field input">
    <h1>
      :<%= f.label :password %><% if @minimum_password_length %>
      <span>(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
    </h1>
    <%= f.password_field :password, autocomplete: "new-password",placeholder:" Enter Password" %>
  </div>
  <div class="field input">
    <h1>:<%= f.label :password_confirmation %></h1>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:" Enter Password confirmation" %>
  </div>
  <div class="actions input">
    <div class="actionBtn"><%= f.submit "Sign up" ,class:"yellowBtn"%></div>
  </div>
<% end %>