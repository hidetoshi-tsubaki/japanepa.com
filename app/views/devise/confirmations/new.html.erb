<div class="head">
  <h1>we sent "Confirm Mail"!. Please Check Your MailBox!</h1>
  <h1> If you don`t get comfirm mail within 20minutes ,
  <br>Please Resend "Comfirm Mail"</h1>
</div>
<div class="form">
  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, builder: CustomFormBuilder) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field input">
      <h2>: Email</h2>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
      value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
      placeholder:" Enter email" %>
    </div>
    <div class="actions input">
      <div class="actionBtn"><%= f.submit "Resend " ,class:"yellowBtn"%></div>
    </div>
  <% end %>
  <div class="sessionHelp">
    <h2>・<%= link_to "Didn't receive  Reset email?", new_confirmation_path(resource_name) %></h2>
    <h2>・<%= link_to "Log in", new_session_path(resource_name) %></h2>
  </div>
</div>
<%= render "devise/shared/links" %>

