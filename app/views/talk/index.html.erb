<h1>post Talk</h1>
<div class="row">
<div class ="col-lg-4">
<%= form_with model:@talk, method:"post", url: create_talk_path do |f| %>


    <div class="field"> 
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>

    <div class="field">
      <%= f.label :img %><br>
      <%= f.file_field :img %>
    </div>
    <div class="field">
      <%= f.check_box :remove_img %>
    </div>
   
    <div class="actions">
      <%= f.submit "Post" %>
    </div>
  <% end %>
</div>

<div class="col-lg-8" id="talkIndex">

<%= render partial:'index', locals:{talks: @talks} %>

</div>